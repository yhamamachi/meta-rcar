+	des_write(MAX_MIPI_TX11(pipe), 0x00);					/* disable all mappings */
+	des_write(MAX_MIPI_TX12(pipe), 0x00);
+
+	for (i = 0; i < ARRAY_SIZE(gmsl2_pipe_maps); i++) {
