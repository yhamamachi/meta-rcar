+	}
+
+	sink->sd = subdev;
+
+	dev_dbg(&priv->client->dev, "Bound %s:%u -> %s:%u\n",
+		subdev->name, src_pad, priv->sd.name, sink_pad);
+
+	return media_create_pad_link(&subdev->entity, src_pad,
+				     &priv->sd.entity, sink_pad,
+				     MEDIA_LNK_FL_ENABLED |
+				     MEDIA_LNK_FL_IMMUTABLE);
