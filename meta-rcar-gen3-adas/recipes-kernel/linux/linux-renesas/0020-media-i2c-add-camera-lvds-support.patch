+static int max96712_gmsl2_get_link_lock(struct max96712_priv *priv, int link_n)
+{
+	int lock_reg[] = {MAX96712_CTRL3, MAX96712_CTRL12, MAX96712_CTRL13, MAX96712_CTRL14};
