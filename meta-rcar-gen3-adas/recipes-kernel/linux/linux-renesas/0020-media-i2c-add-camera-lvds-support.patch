+static int max9296_v4l2_init(struct i2c_client *client)
+{
+	struct max9296_priv *priv = i2c_get_clientdata(client);
+	struct device_node *ep;
+	unsigned int i;
+	int err;
+	long pixel_rate;
+
+	v4l2_async_notifier_init(&priv->notifier);
+
+	for (i = 0; i < priv->n_links; i++) {
