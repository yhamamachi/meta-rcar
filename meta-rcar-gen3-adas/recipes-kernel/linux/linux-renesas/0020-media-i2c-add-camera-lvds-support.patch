+				struct v4l2_subdev *subdev,
+				struct v4l2_async_subdev *asd)
+{
+	struct max9286_priv *priv = v4l2_get_subdevdata(notifier->sd);
+	struct max9286_sink *sink = asd_to_max9286_sink(asd);
+	int sink_pad = sink - &priv->sinks[0];
