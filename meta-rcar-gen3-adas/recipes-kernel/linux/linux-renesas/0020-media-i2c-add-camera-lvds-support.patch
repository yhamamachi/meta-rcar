+static struct i2c_driver max9296_i2c_driver = {
+	.driver	= {
+		.name		= "max9296",
+		.of_match_table	= of_match_ptr(max9296_dt_ids),
+	},
+	.probe		= max9296_probe,
+	.remove		= max9296_remove,
+	.id_table	= max9296_id,
+};
