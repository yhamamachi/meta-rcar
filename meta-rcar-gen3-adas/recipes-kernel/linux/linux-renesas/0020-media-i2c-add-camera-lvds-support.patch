+			"HD_TR_MODE: %d, "
+			"DLOCKED: %d, "
+			"VLOCKED: %d, "
+			"HLOCKED: %d, "
+			"DTRACKEN: %d, "
+			"VTRACKEN: %d, "
+			"HTRACKEN: %d\n",
+			reg,
+			reg_bits(6, 1),
+			reg_bits(5, 1), reg_bits(4, 1), reg_bits(3, 1),
+			reg_bits(2, 1), reg_bits(1, 1), reg_bits(0, 1));
+	des_read(MAX_VIDEO_RX8(pipe), &reg);
+	buf += sprintf(buf,
+			"VIDEO_RX8: 0x%02x\t"
+			"VID_BLK_LEN_ERR: %d, "
+			"VID_LOCK: %d, "
+			"VID_PKT_DET: %d, "
+			"VID_SEQ_ERR: %d\n",
+			reg,
+			reg_bits(7, 1), reg_bits(6, 1),
+			reg_bits(5, 1), reg_bits(4, 1));
+	des_read(MAX_VIDEO_RX10(pipe), &reg);
