+static ssize_t max_pipe_show(struct device *dev,
+				 struct device_attribute *attr, char *buf)
+{
+	struct i2c_client *client = to_i2c_client(dev);
+	struct max9296_priv *priv = i2c_get_clientdata(client);
+	char *_buf = buf;
+	int pipe = 0;
+	int map;
+	int maps_en = 0;
+	int pipes_en;
